%h1.fs-2.mb-3 予約ステータス編集
.card
  .card-body
    %dl.row.mb-4
      %dt.col-sm-3= Reservation.human_attribute_name(:check_in_date)
      %dd.col-sm-9= l(@reservation.check_in_date)

      %dt.col-sm-3= t('reservation.check_out_date')
      %dd.col-sm-9= l(@reservation.check_in_date + @reservation.nights.days)

      %dt.col-sm-3= Reservation.human_attribute_name(:nights)
      %dd.col-sm-9 #{@reservation.nights}泊

      %dt.col-sm-3= User.human_attribute_name(:email)
      %dd.col-sm-9= @reservation.user.email

      %dt.col-sm-3= RoomType.human_attribute_name(:name)
      %dd.col-sm-9= @reservation.room_type.name

    = simple_form_for @reservation, url: administrators_reservation_path(@reservation), method: :patch do |f|
      = f.input :status
      = f.button :submit, class: 'btn-primary'
