.row
  .col-11.mx-auto
    .card
      .row.g-0.p-3
        .col-md-6
          = accommodation_image_tag(@accommodation, :display)
        .col-md-6
          .card-body
            %h1.card-title.mb-3= @accommodation.name
            .card-text= @accommodation.prefecture_text
            .card-text= @accommodation.address
            .card-text= @accommodation.phone_number
            .card-text= @accommodation.accommodation_type_text
            .card-text= @accommodation.description

.fs-2.mt-5.mb-5.text-center 部屋タイプ一覧

.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th= RoomType.human_attribute_name(:name)
        %th= RoomType.human_attribute_name(:capacity)
        %th= RoomType.human_attribute_name(:base_price)
        %th= RoomType.human_attribute_name(:description)
    %tbody
      - @accommodation.room_types.each do |room_type|
        %tr
          %td= link_to room_type.name, accommodation_room_type_path(@accommodation, room_type)
          %td= "#{room_type.capacity}名"
          %td= number_to_currency(room_type.base_price)
          %td= truncate(room_type.description)
