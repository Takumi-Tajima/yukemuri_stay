.navbar.bg-light
  .container-fluid
    .d-flex.align-items-center
      .navbar-brand.fs-2= link_to 'Yukemuri Stay [administrator]', administrators_root_path, class: 'text-decoration-none text-dark'
    - if administrator_signed_in?
      %ul.navbar-nav.flex-row.gap-3
        %li.nav-item= link_to t('reservation.index'), administrators_reservations_path, class: 'nav-link'
        %li.nav-item= link_to t('users.index'), administrators_users_path, class: 'nav-link'
    %ul.navbar-nav.ms-auto
      - if administrator_signed_in?
        = button_to t('general.logout'), destroy_administrator_session_path, method: :delete, data: { turbo_confirm: t('confirm.log_out') } ,class: 'btn btn-outline-danger'
