.row
  .col-8.mx-auto
    %h1.fs-2.mb-4 予約詳細

    .card
      .card-body

        .row.mb-3
          .col-4
            %strong= Accommodation.human_attribute_name(:name)
          .col-8= @reservation.room_type.accommodation.name

        .row.mb-3
          .col-4
            %strong= RoomType.human_attribute_name(:name)
          .col-8= @reservation.room_type.name

        .row.mb-3
          .col-4
            %strong= Reservation.human_attribute_name(:check_in_date)
          .col-8= l(@reservation.check_in_date)

        .row.mb-3
          .col-4
            %strong= Reservation.human_attribute_name(:nights)
          .col-8= "#{@reservation.nights}泊"

        .row.mb-3
          .col-4
            %strong= t('reservation.check_out_date')
          .col-8= l(@reservation.check_in_date + @reservation.nights.days)

        .row.mb-3
          .col-4
            %strong= Reservation.human_attribute_name(:adults)
          .col-8= "#{@reservation.adults}名"

        .row.mb-3
          .col-4
            %strong= Reservation.human_attribute_name(:children)
          .col-8= "#{@reservation.children}名"

        .row.mb-3
          .col-4
            %strong= Reservation.human_attribute_name(:total_amount)
          .col-8= number_to_currency(@reservation.total_amount)

        .row.mb-3
          .col-4
            %strong= Reservation.human_attribute_name(:status)
          .col-8= @reservation.status_text

    - if @reservation.cancellable?
      .mt-4= button_to t('general.cancel'), my_upcoming_reservation_cancellation_status_path(@reservation),
                                            data: { turbo_confirm: '本当にキャンセルしますか？' },
                                            method: :patch, class: 'btn btn-danger'
