%h1.fs-2 ログイン
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.input :email
  = f.input :password
  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  = f.button :submit, t('devise.sessions.new.sign_in'), class: 'btn-primary'

.mt-5= link_to t('devise.registrations.new.sign_up'), new_user_registration_path
.mt-3= link_to t('devise.shared.links.forgot_your_password'), new_user_password_path(resource_name)
